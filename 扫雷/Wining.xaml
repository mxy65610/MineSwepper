<Window x:Class="扫雷.Wining"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:扫雷"
        mc:Ignorable="d"
        Title="成功啦！" Height="316.744" Width="481.395" Icon="Properties/Resources/MainWindowICON.png">
	<Window.Background>
		<ImageBrush ImageSource="Properties/Resources/Wining.jpg"/>
	</Window.Background>
	<Grid HorizontalAlignment="Left" Height="290" VerticalAlignment="Top" Width="471" Margin="0,0,0,-4">
		<Label x:Name="label" Content="恭喜您，胜利了！" HorizontalAlignment="Left" Height="56" Margin="10,63,0,0" VerticalAlignment="Top" Width="267" Foreground="WhiteSmoke" FontSize="32">
			<Label.Background>
				<SolidColorBrush Color="White" Opacity="0"/>
			</Label.Background>
		</Label>
		<Button x:Name="重新选择难度" Content="重新选择难度" HorizontalAlignment="Left" Margin="27,194,0,0" VerticalAlignment="Top" Width="86" Click="重新选择难度_Click" Height="47"/>
		<Button x:Name="退出游戏" Content="退出游戏" HorizontalAlignment="Left" Margin="147,194,0,0" VerticalAlignment="Top" Width="86" Height="47" Click="退出游戏_Click"/>
		<Button x:Name="button" Content="英雄榜" HorizontalAlignment="Left" Margin="94,141,0,0" VerticalAlignment="Top" Width="68" Height="38" Click="button_Click"/>
	</Grid>
</Window>
